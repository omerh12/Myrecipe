<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyRecipe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D3A101</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.MyRecipe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
<!--    <style name="Theme.MyRecipe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->
    <style name="MyPopupMenuLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">#FFFFFF</item> <!-- White background -->
        <item name="android:textAppearance">@style/PopupMenuTextAppearance</item> <!-- Link text style -->
    </style>

    <style name="Theme.MyRecipe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>