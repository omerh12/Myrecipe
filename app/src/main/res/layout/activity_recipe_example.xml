<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3A101"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RecipeExample">


    <TextView
        android:id="@+id/tvRecipeExampleRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecipeName..."
        android:textColor="@color/white"
        android:textSize="34sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <TextView
        android:id="@+id/tvRecipeExampleRecipeIngredientsTitle"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:text="Ingredients:"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp" />

       <TextView
            android:id="@+id/tvRecipeExampleRecipeInstructionsTitle"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Instructions:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRecipeExampleRecipeIngredients"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Ingredients...."
            android:textColor="@color/white"
            android:textSize="18sp" />

            <TextView
                android:id="@+id/tvRecipeExampleRecipeInstructions"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:text="Instructions...."
                android:textColor="@color/white"
                android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivRecipeExampleRecipeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />


</LinearLayout>
