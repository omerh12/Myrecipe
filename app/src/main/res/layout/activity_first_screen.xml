<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5C9B5E"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".FirstScreenActivity">

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyRecipe"
        android:textColor="@color/white"
        android:textSize="60sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFirstScreenLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LogIn"
            android:textColor="#5C9B5E" />


       <Button
          android:id="@+id/btnFirstScreenSignUp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
           android:text="SignUp"
            android:textColor="#5C9B5E"
            android:layout_marginLeft="10sp"
          />

    </LinearLayout>

</LinearLayout>
