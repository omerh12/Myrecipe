<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/firstscreen"
    tools:context=".FirstScreenActivity">

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyRecipe"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFirstScreenSignIn"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="SignIn"
            android:textColor="#D3A101"
            android:textSize="24sp"
            android:backgroundTint="@color/white"
            app:shapeAppearanceOverlay="@style/RoundedImageView"/>


        <Button
            android:id="@+id/btnFirstScreenSignUp"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10sp"
            android:text="SignUp"
            android:textColor="#D3A101"
            android:backgroundTint="@color/white"
            android:textSize="24sp"
            app:shapeAppearanceOverlay="@style/RoundedImageView"/>

    </LinearLayout>

</LinearLayout>
