<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginscreen"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SignInActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignIn"
        android:textColor="#D3A101"
        android:textStyle="bold"
        android:textSize="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/etSignInEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp" />

    <EditText
        android:id="@+id/etSignInEmail"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="Enter your email..."
        android:inputType="textEmailAddress"
        android:padding="6dp"
        android:background="@drawable/roundededittext"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="60dp" />

    <EditText
        android:id="@+id/etSignInPass"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="Enter your password..."
        android:inputType="textPassword"
        android:padding="6dp"
        android:background="@drawable/roundededittext"
        app:layout_constraintTop_toBottomOf="@+id/etSignInEmail"
        app:layout_constraintStart_toStartOf="@+id/etSignInEmail"
        app:layout_constraintEnd_toEndOf="@+id/etSignInEmail"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnSignInEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/etSignInPass"
        app:layout_constraintStart_toStartOf="@+id/etSignInEmail"
        app:layout_constraintEnd_toEndOf="@+id/etSignInEmail"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnSignInGoogle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign In with Google"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btnSignInEmail"
        app:layout_constraintStart_toStartOf="@+id/btnSignInEmail"
        app:layout_constraintEnd_toEndOf="@+id/btnSignInEmail"
        android:layout_marginTop="1dp" />

    <TextView
        android:id="@+id/tvSignUpLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Sign up"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>


