<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3A101"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HomeActivity">


        <TextView
            android:id="@+id/tvCurrentlyCooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currently Cooking"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:textSize="40dp" />

        <ImageView
               android:id="@+id/ivHomeCurrentlyCookingImage"
               android:layout_width="match_parent"
               android:layout_height="250dp"
               android:contentDescription="Recipe Image"
               android:scaleType="centerCrop"
               app:shapeAppearanceOverlay="@style/RoundedImageView" />

        <TextView
            android:id="@+id/tvHomeFavoriteRecipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite Recipes"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/ivHomeCurrentlyFavoriteRecipesImage1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageView" />

        <ImageView
            android:id="@+id/ivHomeCurrentlyFavoriteRecipesImage2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageView" />
</LinearLayout>

