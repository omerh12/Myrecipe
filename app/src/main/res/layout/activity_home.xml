<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3A101"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HomeActivity">


        <TextView
            android:id="@+id/tvCurrentlyCooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currently Cooking"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:textSize="40dp" />
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/recipeCurrentlyCookingImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Recipe Image"
                    app:shapeAppearanceOverlay="@style/RoundedImageView" />

                <TextView
                    android:id="@+id/tvRecipeCurrentlyCookingRecipeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="16dp"/>

                <TextView
                    android:id="@+id/tvRecipeNoCurrentlyCookingRecipeName"
                    android:paddingLeft="45dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nothing Cooking Yet"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="16dp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tvHomeFavoriteRecipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite Recipes"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/ivHomeCurrentlyFavoriteRecipesImage1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageView" />

        <ImageView
            android:id="@+id/ivHomeCurrentlyFavoriteRecipesImage2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageView" />


</LinearLayout>

